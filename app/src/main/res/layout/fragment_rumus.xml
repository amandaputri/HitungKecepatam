<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:layout_margin="16dp">

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <TextView
            android:id="@+id/judul"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginStart="16dp"
            android:layout_marginTop="16dp"
            android:layout_marginEnd="16dp"
            android:text="@string/judulRumus"
            android:textSize="20sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent"/>

        <TextView
            android:layout_marginTop="32dp"
            android:textStyle="bold"
            android:id="@+id/judulKecepatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/judul"
            android:text="@string/judul_kecepatan" />

        <TextView
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            android:id="@+id/judulWaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/rumusKecepatan"
            android:text="Rumus Mencari Waktu" />

        <TextView
            android:layout_marginTop="28dp"
            android:textStyle="bold"
            android:id="@+id/judulJarak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="18sp"
            app:layout_constraintTop_toBottomOf="@id/rumusWaktu"
            android:text="Rumus Mencari Jarak" />


        <TextView
            android:id="@+id/rumusKecepatan"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@id/judulKecepatan"
            android:text="@string/rumus_kecepatan" />

        <TextView
            android:id="@+id/rumusWaktu"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/judulWaktu"
            android:text="@string/rumus_waktu" />

        <TextView
            android:id="@+id/rumusJarak"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="16sp"
            app:layout_constraintTop_toBottomOf="@+id/judulJarak"
            android:text="@string/rumus_jarak" />

    </androidx.constraintlayout.widget.ConstraintLayout>

</ScrollView>
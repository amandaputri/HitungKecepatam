<?xml version="1.0" encoding="utf-8"?>
<navigation xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/navigation"
    app:startDestination="@id/hitungFragment">

    <fragment
        android:id="@+id/hitungFragment"
        android:name="org.d3if2036.hitungkecepatan.ui.hitung.HitungFragment"
        android:label="Menghitung Kecepatan"
        tools:layout="@layout/fragment_hitung" >
        <action
            android:id="@+id/action_hitungFragment_to_rumusFragment"
            app:destination="@id/rumusFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_aboutFragment"
            app:destination="@id/aboutFragment" />
        <action
            android:id="@+id/action_hitungFragment_to_historiFragment"
            app:destination="@id/historiFragment" />
    </fragment>
    <fragment
        android:id="@+id/rumusFragment"
        android:name="org.d3if2036.hitungkecepatan.ui.RumusFragment"
        tools:layout="@layout/fragment_rumus" />
    <fragment
        android:id="@+id/aboutFragment"
        android:name="org.d3if2036.hitungkecepatan.ui.AboutFragment"
        android:label="@string/about_app"
        tools:layout="@layout/fragment_about"/>
    <fragment
        android:id="@+id/historiFragment"
        android:name="org.d3if2036.hitungkecepatan.ui.histori.HistoriFragment"
        android:label="@string/histori"
        tools:layout="@layout/fragment_histori"/>
</navigation>